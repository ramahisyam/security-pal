<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/login2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/industri"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/industri"
            android:foregroundGravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"/>
        <TextView
            android:id="@+id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello !"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/fredoka_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/industri"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:id="@+id/email"
            android:hint="Email"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_email"
            android:background="@drawable/edittext_log2"
            android:fontFamily="@font/gabriela"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHello"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:id="@+id/pass1"
            android:hint="Password"
            android:inputType="textPassword"
            android:fontFamily="@font/gabriela"
            android:drawableLeft="@drawable/ic_lock2"
            android:background="@drawable/edittext_log2"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:id="@+id/pass2"
            android:hint="Repeat Password"
            android:inputType="textPassword"
            android:fontFamily="@font/gabriela"
            android:drawableLeft="@drawable/ic_lock2"
            android:background="@drawable/edittext_log2"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pass1"/>
        <Button
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:id="@+id/arrow"
            android:text="REGISTER"
            android:fontFamily="@font/fredoka_one"
            android:textSize="15dp"
            android:background="@drawable/edittext_log"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/pass2">
        </Button>

        <TextView
            android:id="@+id/TVLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have an account ?"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/gabriela"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrow"
            android:layout_marginTop="25dp" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:background="@drawable/bumn"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVLogin"
            app:layout_constraintBottom_toTopOf="@id/imageView5"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/defend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginBottom="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>