<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subcontractor"
    android:orientation="vertical"
    android:background="@drawable/menuall">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pens1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/tekkom1"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Subcontractor"
                    android:fontFamily="@font/fredoka_one"
                    android:textSize="20dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Permission"
                    android:fontFamily="@font/fredoka_one"
                    android:textSize="20dp"
                    android:layout_marginLeft="210dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/bosnameSubcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Company    :"
                    android:textColor="#174887"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtBosNameSubcon"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/nameEmploySubcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Employee    :"
                    android:textColor="#174887"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/bt_add"
                    android:src="@drawable/ic_addperson"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/bt_reset"
                    android:src="@drawable/ic_refresh"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/recycler_view"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/list_row_main"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/phoneBosSubcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Phone          :"
                    android:textColor="#174887"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtPhoneBosSubcon"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/necessitySubcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Necessity    :"
                    android:textColor="#174887"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtNecessitySubcon"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/purposeSubcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Division       :"
                    android:textColor="#174887"
                    android:textSize="16sp" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spinner"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    app:hintText="Select Division"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/startSubcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Start              :"
                    android:textColor="#174887"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtstartSubcon"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/calStartSubcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/calendar"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/finishSubcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Finish            :"
                    android:textColor="#174887"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtFinishSubcon"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/calFinishSubcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/calendar"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/submitSubcon"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:background="@drawable/edittext_employ">
                </Button>
                <Button
                    android:id="@+id/gotoMonitoring"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Go to Monitoring"
                    android:textColor="@color/white"
                    android:background="@drawable/edittext_monitoring"
                    android:layout_marginLeft="10dp">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>