<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkingSubcontractor"
    android:background="@drawable/bgparksub">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Parking\nSubcontractor"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:fontFamily="@font/gabriela"
        android:layout_marginTop="70dp"/>
    <Button
        android:id="@+id/scanParksub"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv"
        android:text="Scan"
        android:textColor="@color/white"
        android:background="@drawable/edittext_scan"
        android:fontFamily="@font/gabriela"
        android:layout_marginTop="130dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvmasuk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:fontFamily="@font/fredoka_one" />

    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/tvmasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/scanParksub"
        app:layout_constraintEnd_toEndOf="@id/tvkeluar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/gabriela"
        android:text="Enter"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/keluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvkeluar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/masuk"
        android:layout_marginLeft="5dp"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:fontFamily="@font/fredoka_one"/>

    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/tvkeluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/scanParksub"
        app:layout_constraintStart_toEndOf="@id/tvmasuk"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/gabriela"
        android:text="Leave"/>

